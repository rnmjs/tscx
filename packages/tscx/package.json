  },
  "dependencies": {
    "chokidar": "3.6.0",
    "commander": "12.1.0",
    "minimist": "1.2.8"
  },
  "devDependencies": {
    "@types/minimist": "1.2.5",
    "@types/node": "16.18.126",
    "@vitest/coverage-v8": "3.2.4",
    "make-coverage-badge": "1.2.0",
    "vitest": "3.2.4"
  },
  "peerDependencies": {
    "typescript": "*"
  },
  "engines": {
    "node": ">=16.20.2"
  }
}
