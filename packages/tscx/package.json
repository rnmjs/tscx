{
  "name": "@rnm/tscx",
  "version": "0.3.3",
  "description": "A tsc wrapper with many convenient options.",
  "keywords": [
    "typescript",
    "tsc",
    "nodemon",
    "copyfiles",
    "rimraf",
    "rm",
    "watch",
    "tsc-watch",
    "node-dev",
    "restart"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rnmjs/tscx.git"
  },
  "license": "MIT",
  "author": "hellozmj@qq.com",
  "type": "module",
  "bin": {
    "tscx": "./dist/bin/tscx.cli.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "node --experimental-strip-types ./src/bin/tscx.cli.mts",
